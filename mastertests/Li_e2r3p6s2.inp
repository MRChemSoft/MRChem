# vim:syntax=sh:

rel_prec = 1.0e-6                 # Overall relative precision
#printlevel = 10

MPI {
  numerically_exact = true
  share_coulomb_density = true
  share_coulomb_potential = true
  share_nuclear_potential = true
  share_xc_density = false
  share_xc_potential = false
}

MRA {
  min_scale = -5                  # Root scale defines world size 2^{-n}
  corner = [ -1, -1, -1 ]         # Translation of corner root box [x,y,z]
  boxes = [ 2, 2, 2 ]             # Number of root boxes [x,y,z]
}

Molecule {
  angstrom = false
  multiplicity = 1
  charge = 1
$coords
Li      0.0000  0.0000  0.0000
$end
}

WaveFunction {
  method = HF                    # Wave function method (HF or DFT)
  restricted = true
}

Properties {
  scf_energy = true
  solvent_effect = true
}

Solvent {
  kain = 4
  epsilon = 2
  atom_based_cavity = false
  $cavity
  1   0.0000   0.0000   0.0000   3.000
  $end
  sigma = 0.2
  linear = false
}

SCF {
   kain = 4
   run = true
   max_iter = 1
   initial_guess = SAD_DZ
   #write_orbitals = true
}
