world_prec = 1.0e-6                 # Overall relative precision
world_size = 6                      # Size of simulation box 2^n
world_unit = bohr

# use Psi4 naming of displacements
# displacement 2 of 5 (i.e. point -2 in the stencil) 
Molecule {
$coords
H            0.000000000000     0.000000000000    -1.652557236895
F            0.000000000000     0.000000000000     0.087664659828
$end
translate = false
}

WaveFunction {
  method = LDA                      # Wave function method (HF or DFT)
}

SCF {
  guess_type = SAD_DZ             # Type of initial guess: none, mw, gto
}
