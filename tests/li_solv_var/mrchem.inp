# vim:syntax=sh:
world_prec = 1.0e-3               # Overall relative precision
world_size = 5                    # Size of simulation box 2^n

Molecule {
  charge = 1
$coords
Li   0.0     0.0    0.0
$end
}

WaveFunction {
  method = pbe0                     # Wave function method (HF or DFT)
  restricted = true
}

Properties {
  reaction_energy = true            # Compute ground state energy
}
Environment {
  run_SCRF = true
  run_variational = true
  kain_history = 5
  Cavity {
    $coords
    0.0     0.0    0.0  4.0
    $end
    width = 0.5
    angstrom = false
  }
  Permittivity {
    epsilon_out = 2.0
    epsilon_in = 1.0
    linear = false
  }
}

SCF {
  run = true
  kain = 5                        # Length of KAIN iterative history
  orbital_thrs = 1.0e-3           # Convergence threshold in orbital residual
  guess_type = mw                 # Type of initial guess: none, mw, gto
}